{
  "manifest_version": 3,
  "name": "TrustCheck - Safe Browsing",
  "version": "1.0",
  "description": "Cảnh báo khi truy cập trang web không an toàn.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
